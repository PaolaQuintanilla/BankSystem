@model IEnumerable<OPERACION_PAQL.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Clientes</h1>

<p>
    <a asp-action="Create">Crear Cliente</a>
</p>

<div class="col-4 p-0 justify-content-end">
    <form asp-controller="customers" asp-action="Index">
        <p>Buscar por:</p>
        <input type="radio" value="CI" name="searchBy" /><label>CI</label>
        <input type="radio" value="Cuenta" name="searchBy" /><label>Cuenta</label>
        <br />
        <span class="btn-group">
            <input class="form-control" type="text" name="search" />
            <input class="p-1 col-md-12 btn btn-sm btn-info" type="submit" value="Buscar"/>
        </span>
    </form>
</div>

<table class="table table-striped" border="1">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Names)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MotherLastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FatherLastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ci)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cellphone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Names)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MotherLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FatherLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ci)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cellphone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-controller="accounts" asp-action="Index" asp-route-id="@item.Id">Cuentas</a> |
                <a asp-controller="accounts" asp-action="Create" asp-route-id="@item.Id">Generar Cuenta</a>
            </td>
        </tr>
}
    </tbody>
</table>
